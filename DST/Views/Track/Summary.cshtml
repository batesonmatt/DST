                    <h6 class="col-md text-wrap text-muted m-0">@Model.SummaryInfo[TrackSummaryItem.Season].Item2</h6>
                </div>
            </li>
        </ul>
    </div>

    <div class="container mb-5">
        <p class="display-6 border-bottom border-2">Observer</p>
        <ul class="list-group list-group-flush border-bottom border-2">
            <li class="list-group-item">
