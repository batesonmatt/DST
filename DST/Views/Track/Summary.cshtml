@model TrackSummaryViewModel

@{
    ViewBag.Title = "Summary";
    Layout = "_BannerLayout";

    TrackSummaryRoute current = Model.CurrentRoute;
    TrackSummaryRoute routes = current.Clone();
}

@section scripts {
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/location.js"></script>
    <script src="~/js/misc.js"></script>
}

<vc:geolocation-form route="routes.ToDictionary() as Dictionary<string, string>" action-method="SubmitSummaryGeolocation"></vc:geolocation-form>

<partial name="_DsoNameHeadingPartial" model="@Model.Dso" />

<div class="sticky-top-container container-sm px-1 py-2 p-sm-3 my-0 my-sm-3 my-md-5">
    <div class="d-flex flex-column flex-md-row gap-0 gap-sm-2 gap-md-3">
        <div class="flex-grow-1 order-1 order-md-0">
            <div id="summaryOptionsCollapse" class="collapse d-md-flex">
                <nav class="nav nav-pills d-flex flex-column flex-md-row gap-1 gap-md-2">
                    <a class="nav-item nav-link d-none d-md-flex active">Summary</a>
                    <a class="nav-item nav-link d-flex justify-content-between justify-content-md-center border"
                        asp-controller="Track" asp-action="Phase" asp-all-route-data="@routes.ToDictionary()">
                        <span>Phase</span>
                        <i class="bi bi-chevron-right d-md-none"></i>
                    </a>
                    <a class="nav-item nav-link d-flex justify-content-between justify-content-md-center border"
                        asp-controller="Track" asp-action="Period" asp-all-route-data="@routes.ToDictionary()">
                        <span>Period</span>
                        <i class="bi bi-chevron-right d-md-none"></i>
                    </a>
                </nav>
            </div>
        </div>
        <div class="d-flex flex-nowrap justify-content-between">
            <div class="d-flex d-md-none">
                <a class="btn btn-white d-flex flex-nowrap rounded-0 px-1" data-bs-toggle="collapse" href="#summaryOptionsCollapse" role="button"
                   aria-expanded="false" aria-controls="#summaryOptionsCollapse">
                    <i class="bi bi-three-dots-vertical me-1 me-sm-2"></i>
                    <span class="text-truncate">Summary</span>
                </a>
            </div>
            <a class="btn btn-white d-flex justify-content-md-center rounded-0" role="button" data-bs-toggle="modal" href="#geolocation-modal">
                <div class="d-flex gap-0 gap-md-2 text-truncate">
                    <i class="bi bi-geo-alt-fill"></i>
                    <span class="d-none d-md-flex text-truncate">Geolocation</span>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="container pt-3">

    <div class="container mb-5">
        <p class="display-6 border-bottom border-2">Target</p>
        <ul class="list-group list-group-flush border-bottom border-2">
            <li class="list-group-item">
                <div class="row align-items-center my-2">
                    <h5 class="col-md text-wrap mb-md-0 mb-2">@Model.SummaryInfo[TrackSummaryItem.RightAscension].Item1</h5>
                    <h6 class="col-md text-wrap text-muted m-0">@Model.SummaryInfo[TrackSummaryItem.RightAscension].Item2</h6>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center my-2">
                    <h5 class="col-md text-wrap mb-md-0 mb-2">@Model.SummaryInfo[TrackSummaryItem.Declination].Item1</h5>
                    <h6 class="col-md text-wrap text-muted m-0">@Model.SummaryInfo[TrackSummaryItem.Declination].Item2</h6>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center my-2">
                    <h5 class="col-md text-wrap mb-md-0 mb-2">@Model.SummaryInfo[TrackSummaryItem.Catalog].Item1</h5>
                    <h6 class="col-md text-wrap text-muted m-0">@Model.SummaryInfo[TrackSummaryItem.Catalog].Item2</h6>
                </div>
            </li>
            <li class="list-group-item">
