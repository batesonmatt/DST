                    <h6 class="col-md text-wrap text-muted m-0">@Model.SummaryInfo[TrackSummaryItem.UniversalTime].Item2</h6>
                </div>
            </li>
        </ul>
    </div>

    <div class="container mb-5">
        <p class="display-6 border-bottom border-2">Tracker</p>
        <ul class="list-group list-group-flush border-bottom border-2">
            <li class="list-group-item">
                <div class="row align-items-center my-2">
                    <h5 class="col-md text-wrap mb-md-0 mb-2">@Model.SummaryInfo[TrackSummaryItem.Algorithm].Item1</h5>
                    @{
                        routes = current.Clone();
                    }
                    <form asp-action="SetAlgorithm" asp-all-route-data="@routes.ToDictionary()" method="post" id="summary-algorithm" class="col-md m-0">
                        <select name="algorithm" class="form-select text-truncate" onchange="this.form.submit();" asp-items="@Model.Algorithms"></select>
                    </form>
                </div>
            </li>
            <li class="list-group-item">
